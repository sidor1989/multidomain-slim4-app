<div class="form-group">
    <label for="domain_id">Domain bind</label>
    <select id="domain_id" class="form-control" name="domain_id">
        {% for domain in domains %}
            <option   {% if domain.id == client.domain_id %}selected{% endif %} value="{{ domain.id }}">{{ domain.name_domain }}</option>
        {% endfor %}
    </select>
</div>

<div class="form-group">
    <label for="name-input">Name</label>
    <input class="form-control" type="text" value="{{ old.name ?? client.name }}" name="name" id="name-input">
</div>

<div class="form-group">
    <label for="sub_name-input">Sub name</label>
    <input class="form-control" type="text" value="{{  old.sub_name ?? client.sub_name }}" name="sub_name" id="sub_name-input">
</div>

<div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" value="{{ old.description ?? client.description }}" name="description" id="description">
</div>

<div class="form-check">
    <input type="hidden" name="active" value="0">
    <input type="checkbox" class="form-check-input" id="exampleCheck1" name="active"  {{ client.active ? 'checked' : '' }}  value="1}">

    <label class="form-check-label" for="exampleCheck1">Active</label>
</div>


<div class="form-group">
    <img src="{{ client.getImage() }}" alt="" class="img-responsive" width="200">
    <br>
    <label for="img">Img</label>
    <input type="file" class="form-control-file" id="img" name="img">
    <p class="help-block">Max size 50KB</p>
</div>

<div class="form-group">
    <label for="content_1">Content</label>
    <textarea class="form-control" id="content" name="content">{{ old.content ?? client.content }}</textarea>
</div>


<button class="btn btn-primary" type="submit">Submit form</button>