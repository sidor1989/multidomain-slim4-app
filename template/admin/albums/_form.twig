<div class="form-group">
    <label for="name">Name</label>
    <input class="form-control" type="text" value="{{ old.name ?? album.name }}" name="name" id="name">
</div>

<div class="form-group">
    <label for="description">Description</label>
    <input class="form-control" type="text" value="{{  old.description ?? album.description }}" name="description" id="description">
</div>

<div class="form-check">
    <input type="hidden" name="active" value="0">
    <input type="checkbox" class="form-check-input" id="exampleCheck1" name="active"  {{ album.active ? 'checked' : '' }}  value="1}">

    <label class="form-check-label" for="exampleCheck1">Active</label>
</div>

<button class="btn btn-primary" type="submit">Submit form</button>
